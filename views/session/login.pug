body#LoginForm
  .container
    .container
      .row
        .col-sm-9.col-md-7.col-lg-5.mx-auto
          .card.border-0.shadow.rounded-3.my-5
            .card-body.p-4.p-sm-5
              .login-form
                .main-div
                  .panel
                    if info && info.message 
                      div.alert.alert-danger
                        = info.message
                    h2 Admin - Login  
                    p Por favor, ingrese su Email and Password!
                  form#Login(action='/login' method='post')
                    .form-group-floating.mb-3
                      input#username.form-control(type='email' placeholder='Email Address' name="username")
                      label(for='floatingInput') Email address
                    .form-group-floating.mb-2
                      input#password.form-control(type='password' placeholder='Password' name="password")
                      label(for='floatingPassword') Password
                    .form-group-check.mb-3
                      input#rememberPasswordCheck.form-check-input(type='checkbox' value='')
                      label.form-check-label(for='rememberPasswordCheck')
                        | Remember password
                    .forgot-group.mb-3
                      a(href='/forgotPassword') Olvid√© mi password
                    .d-grid
                      button.btn.btn-primary.btn-login.text-uppercase.fw-bold(type='submit')
                        | Sign
                        | in
                    hr.my-4
                    .d-grid.mb-2
                      button.btn.btn-google.btn-login.text-uppercase.fw-bold(type='submit')
                        i.fab.fa-google.me-2
                        |  Sign in with Google
                    .d-grid
                      button.btn.btn-facebook.btn-login.text-uppercase.fw-bold(type='submit')
                        i.fab.fa-facebook-f.me-2
                        |  Sign in with Facebook


